<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/bbd_common_background" />

    <LinearLayout
        android:id="@+id/bbd_disclaimer_view_UI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadingEdgeLength="150dp"
            android:requiresFadingEdge="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/bbd_common_header" />


                <com.good.gd.widget.GDTextView
                    android:id="@+id/gd_disclaimer_text"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bbd_dark_grey"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/gd_done_button"
                style="@style/GDButton"
                android:layout_gravity="end"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <include layout="@layout/bbd_bottom_line" />
    </LinearLayout>
</merge>