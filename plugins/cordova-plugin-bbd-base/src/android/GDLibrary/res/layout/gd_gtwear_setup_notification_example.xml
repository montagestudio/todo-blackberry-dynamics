<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gdwear_setup_notification_example"
    android:background="@color/bbd_white"
    tools:ignore="OverDraw,ContentDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="3dp"
        android:id="@+id/gdwear_setup_requested_text_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gdwear_setup_requested_appname"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:textColor="@color/bbd_transparent_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gdwear_setup_requested"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/bbd_black"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="3dp"
        android:id="@+id/gdwear_setup_icon_layout"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/gdwear_setup_requested_text_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gdwear_setup_icon" />

        <ImageView
            android:id="@+id/gdwear_setup_icon_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/gdwear_setup_icon"
            android:layout_alignTop="@id/gdwear_setup_icon"
            android:layout_alignEnd="@id/gdwear_setup_icon"
            android:layout_alignBottom="@id/gdwear_setup_icon"
            android:background="@drawable/gd_forward_arrow_white"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>