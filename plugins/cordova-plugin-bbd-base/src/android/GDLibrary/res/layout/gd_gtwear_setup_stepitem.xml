<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/gdwear_setup_list_item"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/gdwear_setup_icon_layout">

        <ImageView
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gdwear_setup_icon"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/gdwear_setup_icon_permission_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/gdwear_setup_icon"
            android:layout_alignTop="@id/gdwear_setup_icon"
            android:layout_alignEnd="@id/gdwear_setup_icon"
            android:layout_alignBottom="@id/gdwear_setup_icon"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/bbd_white"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/gdwear_setup_step_text"
        android:layout_marginStart="16dp"
        android:textColor="@color/bbd_dark_grey"
        android:layout_toEndOf="@id/gdwear_setup_icon_layout"/>

</RelativeLayout>
