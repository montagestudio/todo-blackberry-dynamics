<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kaazing.todobbd" version="1.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Todo BlackBerry Dynamics</name>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-manifest/application/activity/@android:windowSoftInputMode" value="adjustPan" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="~4.4.0" />
    <plugin name="cordova-plugin-bbd-base" spec="../../plugins/cordova-plugin-bbd-base" />
    <plugin name="cordova-plugin-bbd-configure" spec="../../plugins/cordova-plugin-bbd-configure" />
    <plugin name="cordova-plugin-bbd-sqlite" spec="../../plugins/cordova-plugin-bbd-sqlite" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-custom-config" spec="^4.0.2" />
</widget>
